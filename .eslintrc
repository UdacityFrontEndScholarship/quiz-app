// install the following packages:
// npm install --save-dev eslint prettier eslint-config-airbnb@^15.0.1 eslint-config-prettier eslint-plugin-prettier babel-eslint eslint-plugin-react eslint-plugin-import eslint-plugin-jsx-a11y@^5.1.1
{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier", "jsx-a11y", "import"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": "off"
  }
}
